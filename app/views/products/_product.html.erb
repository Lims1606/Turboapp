<%= turbo_frame_tag 'new_product' do %>
  <div>
    <p>
      <strong>Name:</strong>
      <%= product.name %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= product.price %>
    </p>

    <%= link_to "Edit", edit_product_path(product), data: { turbo_frame: dom_id(product) } %>
    <%= button_to "Destroy", product_path(product), method: :delete, data: { turbo_frame: dom_id(product)} %>
  </div>
<% end %>

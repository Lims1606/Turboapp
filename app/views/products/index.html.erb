<p style="color: green"><%= notice %></p>

<% content_for :title, "Products" %>

<h1>Products</h1>

<%= turbo_frame_tag "new_product" do %>
  <%= render "form", product: Product.new %>
<% end %>

<div id="products">
  <% @products.each do |product| %>
    <%= turbo_frame_tag dom_id(product) do %>
      <%= render product %>
    <% end %>
  <% end %>
</div>
<p>&nbsp</p>
<%= link_to "New Product", new_product_path, data: { turbo_frame: "new_product" } %>
